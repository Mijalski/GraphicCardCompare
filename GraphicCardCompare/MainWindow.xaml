<Window x:Class="Mijalski.GraphicCardCompare.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mijalski.GraphicCardCompare"
        mc:Ignorable="d"
        Title="Graphic Card Compare" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Graphic Cards">
                <DataGrid x:Name="GraphicCardDataGrid" ItemsSource="{Binding Path=GraphicCardList, Mode=TwoWay, NotifyOnSourceUpdated=True, NotifyOnTargetUpdated=True}" AlternatingRowBackground="LightBlue" AlternationCount="2"
                          Margin="10,36,10,0" IsReadOnly="False" RowEditEnding="GraphicCard_EditEnding"/>
            </TabItem>
            <TabItem Header="Vendors">
                <DataGrid x:Name="VendorGrid" ItemsSource="{Binding Path=VendorList, Mode=OneWay, NotifyOnSourceUpdated=True, NotifyOnTargetUpdated=True}" AlternatingRowBackground="LightBlue" AlternationCount="2"
                          Margin="10,36,10,0" IsReadOnly="False" CanUserDeleteRows="False" RowEditEnding="Vendor_EditEnding"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
